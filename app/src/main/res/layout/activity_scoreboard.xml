<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="chicxulub.nagaram.ScoreboardActivity">
    <TextView
        android:id="@+id/scoreboard_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAllCaps="true"
        android:padding="16dp"
        android:background="@color/black"
        android:text="NAG-A-RAM High Scores"
        android:textAppearance="@android:style/TextAppearance.Large"/>

    <ImageButton
        android:id="@+id/goHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/scoreboard_title"
        android:layout_alignBottom="@+id/scoreboard_title"
        android:src="@drawable/ic_chevron_right_white_24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/transparent"/>
    <ListView
        android:layout_below="@id/scoreboard_title"
        android:id="@+id/listview_scoreboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:gravity="center_vertical"
        android:id="@+id/list_item_scoreboard_textview"
/>

</RelativeLayout>