<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="chicxulub.nagaram"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.NoActionBar" >
        <activity
            android:name="chicxulub.nagaram.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="chicxulub.nagaram.AboutNagaram"
            android:label="@string/title_activity_about_nagaram"
            android:parentActivityName="chicxulub.nagaram.SplashActivity"
            android:theme="@style/Theme.AppCompat" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="chicxulub.nagaram.SplashActivity" />
        </activity>
        <activity
            android:name="chicxulub.nagaram.ChooseDifficulty"
            android:label="@string/title_activity_choose_difficulty"
            android:parentActivityName="chicxulub.nagaram.SplashActivity"
            android:theme="@style/Theme.AppCompat" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="chicxulub.nagaram.SplashActivity" />
        </activity>
    </application>

</manifest>